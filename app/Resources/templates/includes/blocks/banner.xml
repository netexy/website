                        </meta>
                    </property>

                    <!-- url (to button or to banner if button is absent)-->
                    <property name="url" type="url" mandatory="true">
                        <meta>
                            <title lang="en">URL</title>
                            <title lang="uk">URL</title>

                        </meta>
                    </property>

                    <property name="markers" type="snippet">
                        <meta>
                            <title lang="en">Markers</title>
                            <title lang="uk">Маркери</title>
                        </meta>
                        <params>
                            <param name="snippetType" value="marker"/>
