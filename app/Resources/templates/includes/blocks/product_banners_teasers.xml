<properties xmlns="http://schemas.sulu.io/template/template"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.1.xsd">
    <block name="blocks" default-type="product_banners_teasers">
        <types>
            <type name="product_banners_teasers">
                <meta>
                    <title lang="en">Product Banners (Teasers)</title>
                    <title lang="uk">Банери Продуктів (Тізери)</title>
                </meta>

                <properties>
                    <property name="title" type="text_line">
                        <meta>
                            <title lang="en">Title</title>
                            <title lang="uk">Назва</title>
                        </meta>
                    </property>

                    <property name="banners" type="teaser_selection">
                        <meta>
                            <title lang="en">Products</title>
                            <title lang="uk">Продукти</title>
                        </meta>
                        <params>
                            <param name="default_value" value="2"/>
                            <param name="present_as" type="collection">
                                <param name="1">
                                    <meta>
                                        <title lang="en">1 Column</title>
                                        <title lang="uk">1 колонка</title>
                                    </meta>
                                </param>
                                <param name="2">
                                    <meta>
                                        <title lang="en">2 Columns</title>
                                        <title lang="uk">2 колонки</title>
                                    </meta>
                                </param>
                                <param name="3">
                                    <meta>
                                        <title lang="en">Evens + Odd</title>
                                        <title lang="uk">Чередування</title>
                                    </meta>
                                </param>
                            </param>
                        </params>                        
                    </property>

                    <property name="custom_class" type="text_line">
                        <meta>
                            <title lang="en">Custom CSS Class</title>
                            <title lang="uk">CSS Клас</title>
                        </meta>
                    </property>
                </properties>
            </type>
        </types>
    </block>
</properties>
