<properties xmlns="http://schemas.sulu.io/template/template"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.1.xsd">
    <block name="blocks" default-type="promo_heading">
        <types>
            <type name="promo_heading">
                <meta>
                    <title lang="en">Promo Heading (w/ description)</title>
                    <title lang="uk">Промо Заголовок (з описом)</title>
                </meta>

                <properties>
                    <property name="title" type="text_line">
                        <meta>
                            <title lang="en">Heading</title>
                            <title lang="uk">Заголовок</title>
                        </meta>
                    </property>

                    <property name="heading_level" type="single_select">
                        <meta>
                            <title lang="en">Heading Level</title>
                            <title lang="uk">Рівень заголовку</title>
                        </meta>
                        <params>
                            <param name="default_value" value="1"/>
                            <param name="values" type="collection">
                                <param name="1">
                                    <meta>
                                        <title lang="en">1</title>
                                    </meta>
                                </param>
                                <param name="2">
                                    <meta>
                                        <title lang="en">2</title>
                                    </meta>
                                </param>
                                <param name="3">
                                    <meta>
                                        <title lang="en">3</title>
                                    </meta>
                                </param>
                                <param name="4">
                                    <meta>
                                        <title lang="en">4</title>
                                    </meta>
                                </param>
                            </param>
                        </params>
                    </property>

                    <property name="description" type="text_line">
                        <meta>
                            <title lang="en">Description</title>
                            <title lang="uk">Опис</title>
                        </meta>
                    </property>

                    <property name="custom_class" type="text_line">
                        <meta>
                            <title lang="en">Custom CSS Class</title>
                            <title lang="uk">CSS Клас</title>
                        </meta>
                    </property>
                </properties>
            </type>
        </types>
    </block>
</properties>
