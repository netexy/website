<properties xmlns="http://schemas.sulu.io/template/template"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.1.xsd">
    <block name="blocks" default-type="raw_css">
        <types>
            <type name="raw_css">
                <meta>
                    <title lang="en">In-page CSS</title>
                    <title lang="uk">CSS</title>
                </meta>

                <properties>
                    <property name="caption" type="text_line">
                        <meta>
                            <title lang="en">Caption</title>
                            <title lang="uk">Опис</title>
                        </meta>
                    </property>
                    <property name="content" type="text_area" mandatory="true">
                        <meta>
                            <title lang="en">Content</title>
                            <title lang="uk">Контент</title>
                        </meta>
                    </property>
                </properties>
            </type>
        </types>
    </block>
</properties>
