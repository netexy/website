<properties xmlns="http://schemas.sulu.io/template/template"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.1.xsd">
    <block name="blocks" default-type="text">
        <types>
            <type name="text">
                <meta>
                    <title lang="en">Text</title>
                    <title lang="uk">Текст</title>
                </meta>

                <properties>
                    <property name="text" type="text_editor">
                        <meta>
                            <title lang="en">Text</title>
                            <title lang="uk">Текст</title>
                        </meta>
                    </property>

                    <property name="background" type="checkbox">
                        <meta>
                            <title lang="en">Background Color</title>
                            <title lang="uk">Фон</title>
                        </meta>

                        <params>
                            <param name="type" value="toggler"/>
                        </params>
                    </property>

                    <property name="custom_class" type="text_line">
                        <meta>
                            <title lang="en">Custom CSS Class</title>
                            <title lang="uk">CSS Клас</title>
                        </meta>
                    </property>
                </properties>
            </type>
        </types>
    </block>
</properties>
