<?xml version="1.0" ?>
<template xmlns="http://schemas.sulu.io/template/template"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">

    <key>product_banner</key>

    <meta>
        <title lang="en">Product Banner</title>
        <title lang="uk">Банер Продукту</title>
    </meta>

    <properties>
        <property name="title" type="text_line">
            <meta>
                <title lang="en">Title</title>
                <title lang="uk">Назва Блоку</title>
            </meta>
        </property>

        <property name="description" type="text_editor">
            <meta>
                <title lang="en">Description</title>
                <title lang="uk">Опис</title>
            </meta>
        </property>

        <property name="media" type="media_selection">
            <meta>
                <title lang="en">Image</title>
                <title lang="uk">Зображення</title>
            </meta>
        </property>

        <property name="url" type="url">
            <meta>
                <title lang="en">URL</title>
                <title lang="uk">URL</title>
            </meta>
        </property>

        <property name="bg_color" type="color">
            <meta>
                <title lang="en">Background Color</title>
                <title lang="uk">Колір Фону</title>
            </meta>
        </property>

        <property name="text_color" type="color">
            <meta>
                <title lang="en">Text Color</title>
                <title lang="uk">Колір Тексту</title>
            </meta>
        </property>

    </properties>
</template>
