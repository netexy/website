<?xml version="1.0" ?>
<template xmlns="http://schemas.sulu.io/template/template"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">

    <!-- This is the template for a "contact" snippet. -->
    <!-- For further information have a look at pages/homepage.xml. -->
    <key>website_config</key>

    <meta>
        <title lang="en">Website Config</title>
        <title lang="uk">Конфігурація сайту</title>
    </meta>

    <areas>
        <area key="website_config">
            <meta>
                <title lang="en">Website Config</title>
                <title lang="uk">Конфігурация сайту</title>
            </meta>
        </area>
    </areas>

    <properties>
        <property name="title" type="text_line" mandatory="true">
            <meta>
                <title lang="en">Title</title>
                <title lang="uk">Назва</title>
            </meta>

            <tag name="sulu.node.name"/>
        </property>

        <property name="website_title" type="text_line" mandatory="true">
            <meta>
                <title lang="en">Website Name</title>
                <title lang="uk">Назва сайту</title>
                <info_text lang="en">
                    og:site_name, copyrightHolder meta tags
                </info_text>
                <info_text lang="uk">
                    og:site_name, copyrightHolder meta tags
                </info_text>
            </meta>
        </property>

        <property name="logo" type="media_selection">
            <meta>
                <title lang="en">Site Logo</title>
                <title lang="uk">Логотип сайту (значок)</title>
            </meta>
        </property>

        <property name="logo_wide" type="media_selection">
            <meta>
                <title lang="en">Site Logo</title>
                <title lang="uk">Логотип сайту (широкий)</title>
            </meta>
        </property>

        <property name="twitter_site" type="text_line">
            <meta>
                <title lang="en">Twitter Site Property</title>
                <title lang="uk">Twitter Site Property</title>
                <info_text lang="en">
                    twitter:site meta tag value
                </info_text>
                <info_text lang="uk">
                    twitter:site meta tag value
                </info_text>
            </meta>
        </property>

        <property name="template_namespace" type="text_line">
            <meta>
                <title lang="en">Templates Namespace</title>
                <title lang="uk">Простір найменувань для шаблонів</title>
                <info_text lang="en">
                    Don't change unless you understand this option purpose
                </info_text>
                <info_text lang="uk">
                    Не змінюйте це значення, якщо не знаєте, що воно налаштовує
                </info_text>
            </meta>
        </property>

        <property name="articles_parent_node" type="single_internal_link">
            <meta>
                <title lang="en">Articles Root Node</title>
                <title lang="uk">Коренева сторінка для статей</title>
                <info_text lang="en">
                    Used for `breadcrumbs` block as fallback root node in Articles module
                </info_text>
                <info_text lang="uk">
                    Використовується у `breadcrumbs` як коренева сторінка (за замовченням) для модуля статей
                </info_text>
            </meta>
        </property>

        <property name="video_parent_node" type="single_internal_link">
            <meta>
                <title lang="en">Video Articles Root Node</title>
                <title lang="uk">Коренева сторінка для Відео</title>
                <info_text lang="en">
                    Used for top navigator
                </info_text>
                <info_text lang="uk">
                    Використовується у навігації
                </info_text>
            </meta>
        </property>

        <property name="navigation_contact" type="contact" mandatory="true">
            <meta>
                <title lang="en">Navigation Contact</title>
                <title lang="uk">Контакт навігації</title>
            </meta>
        </property>

        <property name="copyright" type="snippet" mandatory="true">
            <meta>
                <title lang="en">Copyright</title>
                <title lang="uk">Копірайт</title>
            </meta>
            <params>
                <param name="snippetType" value="copyright"/>
            </params>
        </property>

        <property name="footer_address" type="text_editor">
            <meta>
                <title lang="en">Company Address in Footer</title>
                <title lang="uk">Адреса компанії у Футері</title>
            </meta>
        </property>

        <property name="footer_social_buttons" type="snippet" mandatory="true">
            <meta>
                <title lang="en">Footer Social Buttons Collection</title>
                <title lang="uk">Соціальні кнопки у Футері</title>
            </meta>
            <params>
                <param name="snippetType" value="button"/>
            </params>
        </property>

