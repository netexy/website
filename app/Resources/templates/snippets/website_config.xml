        <property name="theme" type="single_select">
            <meta>
                <title lang="en">Current Theme</title>
                <title lang="uk">Поточна тема</title>
            </meta>
            <params>
                <param name="default_value" value="light"/>
                <param name="values" type="collection">
                    <param name="light">
                        <meta>
                            <title lang="en">Light</title>
                            <title lang="uk">Світла</title>
                        </meta>
                    </param>
                    <param name="dark">
                        <meta>
                            <title lang="en">Dark</title>
                            <title lang="uk">Темна</title>
                        </meta>
                    </param>
                </param>
            </params>
        </property>

        <property name="ui_text_color" type="color">
