                                    {#{% if 404 == status_code %}#}
                                        <div class="pad-xs-y mar-xs-y">
                                            <a href="/" class="button button--future button-large">{{
                                                'to_homepage'|trans }}</a>
                                        </div>
                                    {#{% endif %}#}
