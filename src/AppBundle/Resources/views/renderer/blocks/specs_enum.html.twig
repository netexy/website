{% import 'AppBundle:macros:helpers.html.twig' as helpers %}
{% set propertyName = propertyName|default('blocks') %}

{% set customClass = '' %}
{% if block.custom_class is defined %}
    {% set customClass = block.custom_class|default('') %}
{% endif %}

<div class="row center-xs  {{ customClass }}">
    <div class="col-xs-12 col-sm-12 col-md-10 col-lg-10 col-xl-9 pad-xs pad-lg-y">
        <div class="row around-xs center-xs">
            {% if block.display_heading|default(true) %}
                {% set heading = {
                    'title': block.title|default(),
                    'heading_level': 2,
                } %}
                {{ helpers.loadBlock('heading', {block: heading}) }}
            {% endif %}

            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 col-xl-6 pad-xs-x mar-xs-b art-list">
                    <div class="row">
                        {% for i in 1..4 %}
                            {% set title = "title_" ~ i %}
                            {% set text = "text_" ~ i %}
                            {% set icon = "material_icon_" ~ i %}

                            {% if attribute(block, title)|length %}
                                <div class="col-xs-12">
                                    <div class="sans tertiary">
                                        <div><i class="left material-icons md c--akcent">filter_{{ i }}</i>
                                            <h3 class="h3 c--akcent">{{ attribute(block, title) }}</h3>
                                        </div>
                                        <p class="pad-xs-x">
                                            {{ attribute(block, text)|raw }}
                                        </p>
                                    </div>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>

                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 col-xl-6 pad-xs-x mar-xs-b art-list">
                    <div class="row">
                        {% for i in 5..8 %}
                            {% set title = "title_" ~ i %}
                            {% set text = "text_" ~ i %}
                            {% set icon = "material_icon_" ~ i %}

                            {% if attribute(block, title)|length %}
                                <div class="col-xs-12">
                                    <div class="sans tertiary">
                                        <div><i class="left material-icons md c--akcent">filter_{{ i }}</i>
                                            <h3 class="h3 c--akcent">{{ attribute(block, title) }}</h3>
                                        </div>
                                        <p class="pad-xs-x">
                                            {{ attribute(block, text)|raw }}
                                        </p>
                                    </div>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>
