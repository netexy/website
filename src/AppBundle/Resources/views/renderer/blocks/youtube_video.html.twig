{% import 'AppBundle:macros:helpers.html.twig' as helpers %}
{% set rel = block.rel_attribute|default('youtube_video') %}

{% set customClass = '' %}
{% if block.custom_class is defined %}
    {% set customClass = block.custom_class|default('') %}
{% endif %}

<div class="container-bg">
    <div class="youtube-video-{{ blockId }} {{ customClass }} text-align--center bord-xs">
        {% if block.display_heading|default(true) %}
            {% set heading = {
                'title': block.title|default(),
                'heading_level': 2,
            } %}
            {{ helpers.loadBlock('heading', {block: heading}) }}
        {% endif %}
        <div class="row">
            <div class="col-xs-12 video-container">
                <section rel="{{ rel }}" typeof="block" class="website-block-wrp">
                    {% if block.link|default('') %}
                        {{ youtube_video(block.link)|raw }}
                    {% endif %}
                </section>
            </div>
        </div>
    </div>
</div>

