{% set propertyName = propertyName|default('blocks') %}

{% set customClass = '' %}
{% if block.custom_class is defined  %}
    {% set customClass = block.custom_class|default('') %}
{% endif %}

{% if block.display_title|length %}
    <div class="marker marker--bright uk-position-absolute uk-transform-center {{ customClass }}" style="left: {{ block.offset_left|default(0) }}%; top: {{ block.offset_top|default(0) }}%">{{ block.display_title }}</div>
{% endif %}
